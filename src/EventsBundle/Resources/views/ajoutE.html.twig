{% extends 'layout.html.twig' %}



{% block javascripts %}
    <!-- REQUIRED JS SCRIPTS -->
    <script type="text/javascript">


        $("#prix").hide();

        $(' input[type=radio]').on("change", function () {

            if ($("input:checked").val() === "Payant"){

                $("#prix").show();
            }

            else {
                $("#prix").hide();

            }

        });

    </script>






    <script>





    </script>

{% endblock %}
{% block  content %}
    {% block  section %}
        <section class="inner-header divider parallax layer-overlay overlay-dark-3" data-bg-img="{{ asset('images/bg/bg-sm2.jpg') }}" style="background-image: {{ asset('&quot;images/bg/bg3.jpg&quot') }}; background-position: 50% 30px;">
            <div class="container pt-70 pb-20">
                <!-- Section Content -->
                <div class="section-content">
                    <div class="row">
                        <div class="col-md-12">
                            <h2 class="title text-white">About</h2>
                            <ol class="breadcrumb text-left text-white mt-10">
                                <li><a href="#" style="color: #0000F0">Home</a></li>
